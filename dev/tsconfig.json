{
    "compilerOptions": {
        "strict": true,
        "module": "es2022",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@app/*": ["./src/*"]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ],
}